@model BEL.MaterialTrackingWorkflow.Models.Role.RoleActivities
@{
    ViewBag.Title = Html.ResourceValue("Page_Title", ResourceNames.RoleActivity);
}
<style>
    .panelheaderpadding {
        padding-left: 6px;
        padding-top: 6px;
    }

    .padding-right-10 {
        padding-right: 10px;
    }

    .padding-left-20 {
        padding-left: 35px;
    }

    .container {
        max-width: 750px;
    }

    div[class*='col-'] {
        padding: 0 30px;
    }

    .wrap {
        box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 1px 5px 0px rgba(0, 0, 0, 0.12);
        border-radius: 4px;
    }

    #accordion_search_bar_container {
        position: relative;
    }

        #accordion_search_bar_container:after {
            content: '\e003';
            font-family: Glyphicons Halflings;
            width: 18px;
            height: 18px;
            position: absolute;
            right: 10px;
            bottom: 10px;
        }

    #accordion_search_bar {
        display: block;
        margin: 10px auto;
        width: 100%;
        padding: 7px 10px;
        border: 1px solid #cacaca;
        border-radius: 25px;
        outline: 0;
    }


    a:focus,
    a:hover,
    a:active {
        outline: 0;
        text-decoration: none;
    }

    .panel {
        border-width: 0px 0px 1px 0px;
        border-style: solid;
        border-color: #428bca;
        background: none;
        box-shadow: none;
    }

        .panel:last-child {
            border-bottom: none;
        }

    .panel-group > .panel:first-child .panel-heading {
        border-radius: 4px 4px 0 0;
    }

    .panel-group .panel {
        border-radius: 0;
    }

        .panel-group .panel + .panel {
            margin-top: 0;
        }

    .panel-heading {
        background-color: #f6f6f6;
        border-radius: 0;
        border: #428bca !important;
        color: #000 !important;
        padding: 0 !important;
        font-size: 14px !important;
    }

    .panel-headings {
        background-color: #f6f6f6;
        border-radius: 0;
        border: #428bca !important;
        color: #000 !important;
        padding: 0 !important;
        font-size: 14px !important;
    }

    .panel-title a {
        display: block;
        color: #000;
        padding: 15px;
        position: relative;
        font-size: 14px;
        margin-left: 15px;
    }

    .panel-body {
        background: #fff;
    }

    .panel:last-child .panel-body {
        border-radius: 0 0 4px 4px;
    }

    .panel:last-child .panel-heading {
        border-radius: 0 0 4px 4px;
        transition: border-radius 0.3s linear 0.2s;
    }

        .panel:last-child .panel-heading.active {
            border-radius: 0;
            transition: border-radius linear 0s;
        }

    .panel-heading .panel-headings a {
        content: ' ';     
        position: absolute;
        font-family: 'Material Icons';
        right: 5px;
        /*top: 10px;*/
        font-size: 18px;
        transition: all 0.5s;
        transform: scale(1);
        font-weight: 400;
    }
    /* #bs-collapse icon scale option */

    .panel-heading a:before {
        content: '\2b';
        position: absolute;
        font-family: 'Material Icons';
        right: 5px;
        /*top: 10px;*/
        font-size: 18px;
        transition: all 0.5s;
        transform: scale(1);
        font-weight: 400;
    }



    .panel-heading.active a:before {
        content: ' ';
        transition: all 0.5s;
        transform: scale(0);
    }

    #bs-collapse .panel-heading a:after {
        content: ' ';
        font-size: 18px;
        position: absolute;
        font-family: 'Material Icons';
        right: 5px;
        /*top: 10px;*/
        transform: scale(1);
        transition: all 0.5s;
        font-weight: 400;
    }

    #bs-collapse .panel-heading.active a:after {
        content: '\2212';
        transform: scale(1);
        transition: all 0.5s;
        font-weight: 400;
        font-size: 18px;
        /*background-color: #428bca;*/
        border-radius: 0;
        border: #428bca !important;
    }
    /* #accordion rotate icon option */

    #accordion .panel-heading a:before {
        content: '\2212';
        font-size: 18px;
        position: absolute;
        font-family: 'Material Icons';
        right: 5px;
        /*top: 10px;*/
        transform: rotate(180deg);
        transition: all 0.5s;
        font-weight: 400;
    }

    #accordion .panel-heading.active a:before {
        transform: rotate(0deg);
        transition: all 0.5s;
        background-color: #00aff0;
        color: white;
    }

    .active {
        background-color: #428bca !important;
    }

        .active h5 a {
            color: white !important;
        }
</style>


<div id="divRoleActivityForm">
    <div id="tab-general">
        <div class="row mbl">
            <div class="col-lg-12">
                <div class="tab-content responsive " id="generalRoleTabContent">
                    <div class="card">
                        <div class="card-head" data-toggle="collapse" data-target="#sectionRoleActivity">
                            @Html.ResourceValue("Page_Title_1", ResourceNames.RoleActivity)
                            <div class="btn collapse-btn"><i class="fa fa-chevron-down"></i></div>
                        </div>
                        <div class="card-body" id="sectionRoleActivity">
                            <div class="form-horizontal">
                                <p><span class="text-danger text-default-light">@Html.ResourceValue("Text_Mandatory", ResourceNames.Common)</span></p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">
                                                <span class="text-danger text-default-light">*</span>
                                                @Html.ResourceValue("Label_Role", ResourceNames.RoleActivity)
                                            </label>
                                            <div class="col-md-8">
                                                <div class="form-control noborder">
                                                    @Html.DropDownList("cmbRole", new SelectList(Model.RoleList, "Name", "Value"), "Select", new { @class = "roleGroup form-control" })
                                                    <input type="text" id="txtRoleName" required="required" data-toggle="tooltip" title="Max 100 characters" maxlength="100" class="form-control alphanumeric hidden" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group margin-top-5">
                                            <input type="button" value="Delete Role" class="btn btn-danger roleGroup" id="btnDeleteRole" />
                                            <input type="button" value="Add New Role" class="btn btn-primary" id="btnAddRole" />
                                            <input type="button" value="Cancel" class="btn btn-default hidden" id="btnCancel" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="card" id="RoleMappingGrid">
                        <div class="card-head" data-toggle="collapse" data-target="#sectionRoleActivityMapping">
                            @Html.ResourceValue("Page_Sub_Title", ResourceNames.RoleActivity)
                            <div class="btn collapse-btn"><i class="fa fa-chevron-down"></i></div>
                        </div>
                        <div class="card-body" id="sectionRoleActivityMapping">
                            <div class="form-horizontal" id="RoleActivityGrid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div>
                                            @Html.Partial("_RoleActivity", Model)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                </div>
            </div>
        </div>
    </div>

    <div class="scroll-top-wrapper ">
        <i class="fa fa-chevron-up">
        </i>
    </div>
</div>




@Scripts.Render("~/bundles/RoleActivityScript")
