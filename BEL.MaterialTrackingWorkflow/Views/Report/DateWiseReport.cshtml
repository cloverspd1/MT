@using BEL.MaterialTrackingWorkflow.Models.Reports
@model Report
@{
    ViewBag.Title = "Date Wise Report";
}
<div class="form-horizontal">
    <div id="divDatewiseFilter" class="card">
        <div class="card-body in">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-md-4 control-label">
                            @Html.LabelFor(m => m.DateValues, ResourceNames.Report)

                        </label>
                        <div class="col-md-8 ">
                            <div class="form-control noborder">
                                <div class="input-group date datepicker">
                                    @Html.TextBoxFor(m => m.DateValues, "{0:dd-MM-yyyy}", new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">

                        <label class="control-label">
                            <a href="javascript:void(0)" id="btnSearchByDate" class="btn btn-primary">
                                <i class="fa fa-search"></i>&nbsp; @Html.ResourceValue("Label_Search", ResourceNames.Report)
                            </a>
                        </label>
                        <label class="control-label">
                            <a href="javascript:void(0);" id="btnDateWiseExportToExcel" class="btn btn-primary">@Html.ResourceValue("Label_ExportToExcel", ResourceNames.Report)</a>
                        </label>

                    </div>
                </div>
            </div>

            <div class="row">
                <div id="tblReport">
                    @Html.Partial("_ReportList", Model.ReportList)
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/Reports")
}
